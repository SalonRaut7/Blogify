<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
      /* Modern Background */
      body {
        background: linear-gradient(to right, #4b6cb7, #182848); /* Blue gradient */
        min-height: 100vh;
        padding: 20px;
      }

      /* Adjusting for fixed navbar */
      .content-container {
        margin-top: 80px; /* Adjust this value if needed */
      }

      .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
      }

      .card {
        width: 100%;
        min-height: 350px;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease-in-out;
        background: rgba(255, 255, 255, 0.1); /* Slight transparency */
        backdrop-filter: blur(10px); /* Glass effect */
        color: white; /* Better contrast */
      }

      .card:hover {
        transform: scale(1.05);
      }

      /* Center text for better UI */
      .card-body {
        text-align: center;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container content-container">
      <div class="row g-4">
        <% blogs.forEach(blog => { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
          <div class="card">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Image" />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-light">View</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
