<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
    <style>
      /* Blog Page Styles */
      body {
        background: linear-gradient(to right, #4b6cb7, #182848); /* Blue gradient */
        color: white;
        font-family: 'Arial', sans-serif;
        padding-top: 80px; /* Ensure space for fixed navbar */
      }

      /* Blog Title */
      h1 {
        font-size: 2rem;
        color: #ffcc70; /* Warm contrast color for the title */
      }

      /* Blog Content */
      .blog-content {
        background: rgba(255, 255, 255, 0.1); /* Glass effect */
        backdrop-filter: blur(10px);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        margin-bottom: 30px;
        position: relative;
      }

      /* Image Styling */
      .blog-image {
        width: 100%;
        max-width: 700px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
      }

      /* Author Info */
      .author-info {
        display: flex;
        align-items: center;
        margin-top: 20px;
      }

      .author-info img {
        border-radius: 50%;
        margin-right: 10px;
      }

      .author-info .author-name {
        font-size: 1rem;
        font-weight: bold;
      }

      /* Action Buttons */
      .actions {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-top: 10px;
      }

      .actions button, .actions a {
        background-color: #ffcc70;
        border: none;
        padding: 8px 15px;
        font-size: 14px;
        border-radius: 5px;
        cursor: pointer;
        color: black;
        text-decoration: none;
      }

      .actions button:hover, .actions a:hover {
        background-color: #ffaa33;
      }

      /* Like Button */
      .like-button {
        display: flex;
        align-items: center;
        gap: 5px;
        background-color: transparent;
        border: none;
        color: white;
        cursor: pointer;
      }

      .like-button:hover {
        color: #ffcc70;
      }

      /* Comment Section */
      .comment-section {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        padding: 20px;
        border-radius: 10px;
      }

      /* Comment Input */
      .comment-input {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .comment-input input {
        flex: 1;
        margin-right: 10px;
        font-size: 14px;
        padding: 10px;
      }

      .comment-input button {
        font-size: 14px;
        padding: 10px 15px;
      }

      /* Individual Comment */
      .comment {
        background: rgba(255, 255, 255, 0.15);
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 10px;
        display: flex;
        align-items: flex-start;
      }

      .comment img {
        border-radius: 50%;
        margin-right: 10px;
      }

      .comment-content {
        max-width: 90%;
      }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <div class="blog-content">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" class="blog-image" alt="Blog Image" />
        <pre class="mt-3"><%= blog.body %></pre>

        <!-- Like Button -->
        <% if (locals.user) { %>
          <form action="/blog/like/<%= blog._id %>" method="POST">
            <button type="submit" class="like-button">
              ‚ù§Ô∏è <span><%= blog.likes.length %></span> Likes
            </button>
          </form>
        <% } else { %>
          <p>‚ù§Ô∏è <%= blog.likes.length %> Likes</p>
        <% } %>

        <!-- Edit & Delete Buttons (Only for Blog Creator) -->
        <% if (locals.user && locals.user._id.toString() === blog.createdBy._id.toString()) { %>
          <div class="actions">
            <a href="/blog/edit/<%= blog._id %>">‚úèÔ∏è Edit</a>
            <form action="/blog/delete/<%= blog._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this blog?');">
              <button type="submit">üóëÔ∏è Delete</button>
            </form>
          </div>
        <% } %>

      </div>
    </div>

    <div class="container mt-4">
      <div class="author-info">
        <img src="<%= blog.createdBy.profileImageURL %>" width="50px" alt="Author Image" />
        <div class="author-name"><%= blog.createdBy.fullName %></div>
      </div>
    </div>

    <div class="container mt-3">
      <div class="comment-section">
        <h3>Comments (<%= comments.length %>)</h3>

        <% if (locals.user) { %>
          <form action="/blog/comment/<%= blog._id %>" method="post" class="comment-input">
            <input
              type="text"
              name="content"
              class="form-control"
              placeholder="Enter your comment"
            />
            <button class="btn btn-sm btn-primary" type="submit">Add</button>
          </form>
        <% } %>

        <div class="mt-3">
          <% comments.forEach(comment => { %>
            <div class="comment">
              <img src="<%= comment.createdBy.profileImageURL %>" width="50px" alt="Commenter Image" />
              <div class="comment-content">
                <strong><%= comment.createdBy.fullName %></strong>
                <pre><%= comment.content %></pre>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>
